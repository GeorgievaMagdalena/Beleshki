@model Beleshki.Models.Beleshka

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Beleshka</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BeleshkaIme)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BeleshkaIme)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatumKreiranje)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatumKreiranje)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Predmet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Predmet.PredmetIme)
        </dd>
        <dt class="col-sm-2">Komentar od student: </dt>
        <dd class="col-sm-10">
            @{
                var komentari = ViewBag.Komentari as List<string>;
            }
            @foreach (var kom in komentari)
            {
                 <p> @kom</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
