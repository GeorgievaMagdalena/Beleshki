@model Beleshki.Models.Fakultet

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Fakultet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FakultetIme" class="control-label"></label>
                <input asp-for="FakultetIme" class="form-control" />
