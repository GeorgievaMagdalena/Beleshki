@model IEnumerable<Beleshki.Models.Komentar>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentIme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.komentar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ocenka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beleshka)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentIme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.komentar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ocenka)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Beleshka.BeleshkaIme)
            </td>
            <td>
                    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }
                    |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
